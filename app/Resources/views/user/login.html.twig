{% extends 'base.html.twig' %}

{% block main %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <br>
        <h1>{{ 'site.login.title'|trans }}</h1>
        <form action="{{ path('login') }}" method="post">
            <label for="username">{{ 'site.login.username'|trans }}:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />

            <label for="password">{{ 'site.login.password'|trans }}:</label>
            <input type="password" id="password" name="_password" />
            <input type="hidden" name="_target_path" value="" />

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button type="submit">{{ 'site.login.login'|trans }}</button>
        </form>

    <div>
        <a href="#">{{ 'site.login.registration'|trans }}</a>
    </div>

{% endblock %}
