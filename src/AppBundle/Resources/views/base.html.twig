<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/app.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-10 col-lg-offset-1 hello">
                        {% block navbar %}
                            <nav class="navbar navbar-default">
                                <div class="container-fluid">
                                    <!-- Brand and toggle get grouped for better mobile display -->
                                    <div class="navbar-header">
                                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                            <span class="sr-only">Toggle navigation</span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                        </button>
                                    </div>

                                    <!-- Collect the nav links, forms, and other content for toggling -->
                                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                        <ul class="nav navbar-nav">
                                            <li class="active"><a href="/">{% trans %}template.navbar.home{% endtrans %} <span class="sr-only">(current)</span></a></li>
                                            <li><a href="/word/new">{% trans %}template.navbar.add_word{% endtrans %}</a></li>
                                        </ul>
                                        <ul class="nav navbar-nav navbar-right">
                                            {% if not app.user %}
                                            <li><a href="/user/login">{% trans %}template.navbar.login{% endtrans %}</a></li>
                                            <li><a href="/user/register">{% trans %}template.navbar.register{% endtrans %}</a></li>
                                            {% else %}
                                            <li><a href="/user">{% trans %}template.navbar.profile{% endtrans %}</a></li>
                                            <li><a href="/user/logout">{% trans %}template.navbar.logout{% endtrans %}</a></li>
                                            {% endif %}
                                        </ul>
                                    </div><!-- /.navbar-collapse -->
                                </div><!-- /.container-fluid -->
                            </nav>
                        {% endblock %}
                        {% block slider %}
                            {% include 'AppBundle::slider.html.twig' %}
                        {% endblock %}
                        {% block content %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
