{% extends 'AppBundle::base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <p>
                        {{ 'base.Hello, %name%'|trans({'%name%': app.user.userProfile.firstName}) }}
                        {{ 'user.loggedin'|trans }}
                        <a class="link" href="{{ path('logout') }}">{{ 'user.logout'|trans }}</a>
                    </p>
                {% else %}
                    <h1>{{ title }}</h1>

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <button type="submit" class="btn-default btn">{{ 'user.signup'|trans }}</button>
                    </div>
                    {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
